{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Trackstar Game API",
    "description": "Multiplayer music guessing game API with buzz-in mechanics"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    },
    {
      "url": "https://trackstar.yourdomain.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "Sessions",
      "description": "Game session management"
    },
    {
      "name": "Players",
      "description": "Player management"
    },
    {
      "name": "Rounds",
      "description": "Game rounds and gameplay"
    },
    {
      "name": "Packs",
      "description": "Music packs"
    }
  ],
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/api/sessions": {
      "post": {
        "description": "Create a new game session",
        "summary": "Create session",
        "tags": [
          "Sessions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "packId": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                "required": [
                  "packId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Session created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "code": {
                      "type": "string"
                    },
                    "host_name": {
                      "type": "string"
                    },
                    "pack_id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "state": {
                      "type": "string",
                      "enum": [
                        "lobby",
                        "playing",
                        "buzzed",
                        "reveal",
                        "finished"
                      ]
                    },
                    "current_round": {
                      "type": "integer"
                    },
                    "round_start_time": {
                      "type": "string",
                      "nullable": true,
                      "format": "date-time"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "id",
                    "code",
                    "host_name",
                    "pack_id",
                    "state",
                    "current_round",
                    "round_start_time",
                    "created_at"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{id}": {
      "get": {
        "description": "Get session details with optional includes",
        "summary": "Get session",
        "tags": [
          "Sessions"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "id",
            "in": "path"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "include",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Session retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "code": {
                      "type": "string"
                    },
                    "state": {
                      "type": "string"
                    },
                    "current_round": {
                      "type": "number"
                    },
                    "players": {
                      "type": "array",
                      "items": {
                        "nullable": true
                      }
                    },
                    "rounds": {
                      "type": "array",
                      "items": {
                        "nullable": true
                      }
                    },
                    "pack": {
                      "nullable": true
                    }
                  },
                  "required": [
                    "id",
                    "code",
                    "state",
                    "current_round"
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Session not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{id}/players": {
      "post": {
        "description": "Join a game session as a player",
        "summary": "Join session",
        "tags": [
          "Players"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "playerName": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50
                  }
                },
                "required": [
                  "playerName"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Player joined successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "session_id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "score": {
                      "type": "integer"
                    },
                    "joined_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": [
                    "id",
                    "session_id",
                    "name",
                    "score",
                    "joined_at"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request - invalid input or game already started"
          },
          "404": {
            "description": "Session not found"
          }
        }
      },
      "get": {
        "description": "List all players in a session",
        "summary": "List players",
        "tags": [
          "Players"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "id",
            "in": "path"
          },
          {
            "schema": {
              "type": "string",
              "enum": [
                "score",
                "joined_at",
                "name"
              ],
              "default": "score"
            },
            "required": false,
            "name": "sort",
            "in": "query"
          },
          {
            "schema": {
              "type": "string",
              "enum": [
                "asc",
                "desc"
              ],
              "default": "desc"
            },
            "required": false,
            "name": "order",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Players list retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "session_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string"
                      },
                      "score": {
                        "type": "integer"
                      },
                      "joined_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    },
                    "required": [
                      "id",
                      "session_id",
                      "name",
                      "score",
                      "joined_at"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{id}/rounds/current/buzz": {
      "post": {
        "description": "Player buzzes in during current round",
        "summary": "Buzz in",
        "tags": [
          "Rounds"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "playerId": {
                    "type": "string",
                    "format": "uuid"
                  }
                },
                "required": [
                  "playerId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Buzz recorded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "session_id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "round_number": {
                      "type": "integer"
                    },
                    "track_id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "buzzer_player_id": {
                      "type": "string",
                      "nullable": true,
                      "format": "uuid"
                    },
                    "elapsed_seconds": {
                      "type": "number",
                      "nullable": true
                    },
                    "was_correct": {
                      "type": "boolean",
                      "nullable": true
                    },
                    "points_awarded": {
                      "type": "integer",
                      "nullable": true
                    }
                  },
                  "required": [
                    "id",
                    "session_id",
                    "round_number",
                    "track_id",
                    "buzzer_player_id",
                    "elapsed_seconds",
                    "was_correct",
                    "points_awarded"
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request - game not playing, round not started, or someone already buzzed"
          },
          "404": {
            "description": "Session or round not found"
          }
        }
      }
    },
    "/api/sessions/{id}/rounds/current": {
      "patch": {
        "description": "Update current round state (start, judge, reveal)",
        "summary": "Update current round",
        "tags": [
          "Rounds"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "start"
                        ]
                      }
                    },
                    "required": [
                      "action"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "judge"
                        ]
                      },
                      "correct": {
                        "type": "boolean"
                      }
                    },
                    "required": [
                      "action",
                      "correct"
                    ]
                  },
                  {
                    "type": "object",
                    "properties": {
                      "action": {
                        "type": "string",
                        "enum": [
                          "reveal"
                        ]
                      }
                    },
                    "required": [
                      "action"
                    ]
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Round updated successfully"
          },
          "400": {
            "description": "Bad request - invalid action"
          }
        }
      }
    },
    "/api/packs": {
      "get": {
        "description": "List all music packs with optional includes",
        "summary": "List packs",
        "tags": [
          "Packs"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "include",
            "in": "query"
          },
          {
            "schema": {
              "type": "string"
            },
            "required": false,
            "name": "is_active",
            "in": "query"
          },
          {
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 100
            },
            "required": false,
            "name": "limit",
            "in": "query"
          },
          {
            "schema": {
              "type": "integer",
              "nullable": true,
              "minimum": 0,
              "default": 0
            },
            "required": false,
            "name": "offset",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Packs list retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string",
                        "nullable": true
                      },
                      "is_active": {
                        "type": "boolean"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "track_count": {
                        "type": "integer"
                      },
                      "tracks": {
                        "type": "array",
                        "items": {
                          "nullable": true
                        }
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "description",
                      "is_active",
                      "created_at"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}